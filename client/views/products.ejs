<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">List of Products</h1>
        <div class="row">
            <% data.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <% if (product.images && product.images.length > 0) { %>
                            <img src="<%= product.images[0] %>" class="card-img-top" alt="<%= product.libelle %>">
                        <% } else { %>
                            <img src="/images/placeholder.png" class="card-img-top" alt="No image available">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= product.libelle %></h5>
                            <p class="card-text"><%= product.description %></p>
                            <p class="card-text"><strong>Price:</strong> $<%= product.prix.toFixed(2) %></p>
                            <p class="card-text"><strong>Category:</strong> <%= product.categorie %></p>
                            <a href="/products/<%= product.id %>" class="btn btn-primary">View Details</a>
                            <a href="#" class="btn btn-primary">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
